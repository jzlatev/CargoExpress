@model UserEditViewModel

@{
	ViewData["Title"] = "Edit User";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>
</head>
<body>
	<section class="content">
		<form id="editUser" method="post">
			<div class="offset-md-4 col-md-4 offset-lg-4 col-lg-4 offset-xl-4 col-xl-4 col-sm-12">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Edit</h3>
					</div>
					<div class="card-body" style="display: block;">
						<div class="form-group">
							<label asp-for="FirstName" class="form-label"></label>
							<input asp-for="FirstName" class="form-control" placeholder="First name" aria-required="true" />
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="LastName" class="form-label"></label>
							<input asp-for="LastName" class="form-control" placeholder="Last name" aria-required="true" />
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
					</div>
					<div class="card-footer">
						<a href="/Admin/User/All" class="btn btn-secondary">Cancel</a>
						<input type="submit" value="Edit" class="btn btn-success float-right">
					</div>
				</div>
			</div>
		</form>
	</section>
	<script src="~/js/adminlte.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>