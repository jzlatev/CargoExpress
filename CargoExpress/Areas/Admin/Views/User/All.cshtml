@model IEnumerable<UserAllViewModel>
@{
	ViewData["Title"] = "All Users";
}

<div class="row">
	<div class="col-sm-12 offset-md-4 col-md-4 offset-lg-4 col-lg-4 offset-xl-4 col-xl-4">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Users</h3>
			</div>
			<div class="card-body">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th style="width: 150px">User</th>
							<th style="width: 180px">Email</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var user in Model)
						{
							<tr>
								<td>@user.Name</td>
								<td>@user.Email</td>
								<td>
									<div class="row offset-sm-1 col-sm-10 offset-md-1 col-md-10 offset-lg-1 col-lg-10 offset-xl-1 col-xl-10">
										<a class="btn btn-block btn-outline-info btn-xs" asp-area="Admin" asp-controller="User" asp-action="Roles" asp-route-id="@user.Id">
											<i class="fas fa-user-tag"></i>
										</a>
										<a class="btn btn-block btn-outline-info btn-xs" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
											<i class="fas fa-pen"></i>
										</a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>

