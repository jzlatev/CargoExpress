@using CargoExpress.Core.Models
@model DeliveryCreateViewModel

@{
	ViewData["Title"] = "Create delivery";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>
</head>
<body>
	<section class="content">
		<form id="createDelivery" method="post">
			<div class="offset-md-3 col-md-6 offset-xl-3 col-xl-6 col-sm-12">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Create</h3>
					</div>
					<div class="card-body" style="display: block;">
						<div class="form-group">
							<label asp-for="PickedAt" class="form-label"></label>
							<input asp-for="PickedAt" class="form-control" aria-required="true" />
							<span asp-validation-for="PickedAt" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="DeliveredAt" class="form-label"></label>
							<input asp-for="DeliveredAt" class="form-control" aria-required="true" />
							<span asp-validation-for="DeliveredAt" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="PickWarehouseId" class="form-label"></label>
							<input asp-for="PickWarehouseId" class="form-control" placeholder="Loading warehouse number" aria-required="true" />
							<span asp-validation-for="PickWarehouseId" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="PickAddress" class="form-label"></label>
							<textarea id="deliveryPickAddr" asp-for="PickAddress" class="form-control" rows="3" placeholder="Loading address"></textarea>
						</div>
						<div class="form-group">
							<label asp-for="DeliveryWarehouseId" class="form-label"></label>
							<input asp-for="DeliveryWarehouseId" class="form-control" placeholder="Delivery warehouse number" aria-required="true" />
							<span asp-validation-for="DeliveryWarehouseId" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="DeliveryAddress" class="form-label"></label>
							<textarea id="deliveryAddr" asp-for="DeliveryAddress" class="form-control" rows="3" placeholder="Delivery address"></textarea>
						</div>
					</div>
					<div class="card-footer">
						<a href="/" class="btn btn-secondary">Cancel</a>
						<input type="submit" value="Create" class="btn btn-success float-right">
					</div>
				</div>
			</div>
		</form>
	</section>
	<!-- jQuery -->
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>