@model DriverCreateViewModel

@{
	ViewData["Title"] = "Create driver";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>
</head>
<body>
	<section class="content">
		<form id="createDriver" method="post">
			<div class="offset-md-3 col-md-6 offset-xl-3 col-xl-6 col-sm-12">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Create</h3>
					</div>
					<div class="card-body" style="display: block;">
						<div class="form-group">
							<label asp-for="EGN" class="form-label"></label>
							<input asp-for="EGN" type="number" class="form-control" aria-required="true" />
							<span asp-validation-for="EGN" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="FirstName" class="form-label"></label>
							<input asp-for="FirstName" class="form-control" placeholder="First name" aria-required="true" />
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="MiddleName" class="form-label"></label>
							<input asp-for="MiddleName" class="form-control" placeholder="Middle name" aria-required="true" />
							<span asp-validation-for="MiddleName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="LastName" class="form-label"></label>
							<input asp-for="LastName" class="form-control" placeholder="Last name" aria-required="true" />
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
					</div>
					<div class="card-footer">
						<a href="/Driver/All" class="btn btn-secondary">Cancel</a>
						<input type="submit" value="Create" class="btn btn-success float-right">
					</div>
				</div>
			</div>
		</form>
	</section>
	<!-- jQuery -->
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>